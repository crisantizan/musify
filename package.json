{
  "name": "cisum-api",
  "version": "1.0.0",
  "description": "Small on-line music player developed in NodeJS (ExpressJS) and MongoDB (Mongoose), using Typescript as super set",
  "main": "src/main.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/main.js",
    "serve": "nodemon",
    "build": "rimraf build && tsc && yarn copy:assets",
    "format": "prettier --write \"src/**/*.{ts,json,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,js}\"",
    "copy:assets": "cpx 'src/assets/**' 'build/assets'"
  },
  "keywords": [
    "express",
    "ts",
    "typescript",
    "boilerplate"
  ],
  "author": {
    "name": "Cristian Santiz",
    "email": "crisantizan@gmail.com",
    "url": "https://cristiansantiz.netlify.com"
  },
  "license": "MIT",
  "_moduleAliases": {
    "@": "build/"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.2",
    "@types/fs-extra": "^8.1.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.6",
    "@types/mongoose-paginate-v2": "^1.3.1",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.2",
    "cpx": "^1.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/express": "^4.17.3",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.21.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^9.0.0",
    "mediaserver": "^0.1.1",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "mongoose": "^5.9.5",
    "mongoose-paginate-v2": "^1.3.6",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "tedis": "^0.1.12",
    "ts-custom-error": "^3.1.1"
  },
  "engines": {
    "node": ">=10.16.2",
    "yarn": ">=1.22.4"
  }
}
